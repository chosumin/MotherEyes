<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/studying2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Page1Activity"
    android:id="@+id/ta1" >

    <ImageView
        android:id="@+id/mImageView"
        android:layout_width="240px"
        android:layout_height="220px"
        android:layout_marginLeft="15px"
        android:layout_marginTop="65px" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="560px"
        android:layout_marginTop="320px"
        android:background="#00ff0000"
       />

    <ListView
        android:id="@+id/list"
        android:layout_width="600px"
        android:layout_height="500px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="430px" />

    <Button
        android:id="@+id/button1"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_marginLeft="465px"
        android:layout_marginTop="80px"
        android:background="#00ff0000" />

    <Button
        android:id="@+id/button2"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_marginLeft="290px"
        android:layout_marginTop="80px" 
        android:background="#00ff0000"/>

</RelativeLayout>